pipeline {
    agent { 
		docker { 
			image 'maven:latest' 
		}
	}
   configFileProvider(
        [configFile(fileId: 'settings.xml', variable: 'MAVEN_SETTINGS')]) {
        sh 'mvn -s $MAVEN_SETTINGS clean package'
    }
    stages {
        stage('tests') {
            steps {
                sh "mvn install -s MAVEN_SETTINGS -f 005 - Recording Test Results and Artifacts/02 - Java Unit Tests/"
            }
        }
    }
}
